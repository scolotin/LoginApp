<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/desc"
        android:textAlignment="textStart"
        android:textSize="@dimen/txt_size_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/money"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/money"
        android:textAlignment="textStart"
        android:textSize="@dimen/txt_size_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintBottom_toTopOf="@+id/hairline"/>

    <View
        android:id="@+id/hairline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_hairline"
        android:layout_marginTop="@dimen/margin_hairline"
        android:background="@color/design_default_color_primary_variant"
        app:layout_constraintTop_toBottomOf="@+id/money"/>

</androidx.constraintlayout.widget.ConstraintLayout>
